@model ProductModel
@{
    ViewData["title"] = "Them San Pham";
}
<h4>Thêm Sảm Phẩm</h4>
<div class="col-md-9">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Tên sản phẩm</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Giá Sản Phẩm</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Mô Tả Sản Phẩm</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Số Lượng Sản Phẩm</label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Danh Mục</label>
            <select asp-for="CategoriesId" class="form-control" asp-items="ViewBag.Categories">
                <option>--Chọn danh mục</option>
            </select>
            <span asp-validation-for="CategoriesId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Thương Hiệu</label>
            <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands">
                <option>--Chọn thương hiệu</option>
            </select>
            <span asp-validation-for="BrandId" class="text-danger"></span>
        </div>
        <div class="form-group">
        <label>Hình Ảnh</label>
            <input asp-for="ImageUpload" class="form-control" />
            <span asp-validation-for="ImageUpload" class="text-danger"></span>
            <img id="imgpreview" class="pt-2"/>
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Thêm</button>
        </div>
    </form>
    <a asp-action="Index">Trở lại danh sách sản phẩm</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.ckeditor.com/4.22.1/basic/ckeditor.js"></script>
    <script>
        $("#ImageUpload").change(function () {
            readURL(this);
        })
    </script>
    <script>
        CKEDITOR.replace("Description");
    </script>
}
