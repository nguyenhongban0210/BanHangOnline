@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Danh sach san pham";
}
<h3>Danh sách sản phẩm</h3>
<div class="row-sm-3">
    <a class="btn btn-success btn-sm" asp-action="Create" asp-controller="Product">Thêm sản phẩm</a>
    <div class="search_box pull-right">
        <form asp-controller="Product" asp-action="Search" method="get">
            <input type="text" name="searchString" placeholder="Search" />
            <button class="btn btn-default" type="submit">Search</button>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            @* <th scope="col">ID</th> *@
            <th scope="col">Hình Ảnh</th>
            <th scope="col">Tên Sản Phẩm</th>
            <th scope="col">Mô Tả</th>
            <th scope="col">Giá</th>
            <th scope="col">Số Lượng</th>
            <th scope="col">Danh Mục</th>
            <th scope="col">Thương Hiệu</th>
            <th scope="col">Quản lý</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                @* <th scope="row">@item.Id</th> *@
                <td><img src="~/media/products/@item.Image" width="120"/> </td>
                <td>@item.Name</td>
                <td>@Html.Raw(@item.Description)</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>@item.Categories.Name</td>
                <td>@item.Brand.Name</td>      
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Product" asp-route-Id="@item.Id">Sửa</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Product" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>