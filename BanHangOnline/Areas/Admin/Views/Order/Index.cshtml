@model IEnumerable<OrderModel>
@{
    ViewData["title"] = "Don hang";
}
<h3>Đơn hàng</h3>
<div class="row-sm-3">
    <div class="search_box pull-right">
        <form asp-controller="Order" asp-action="Search" method="get">
            <input type="text" name="searchString" placeholder="Search" />
            <button class="btn btn-default" type="submit">Search</button>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            @* <th scope="col">ID</th> *@
            <th scope="col">Mã đơn hàng</th>
            <th scope="col">User Name</th>
            <th scope="col">Ngày tạo</th>
            <th scope="col">Trạng thái</th>
            <th scope="col">Quản lý</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.OrderCode</th>
                <td>@item.Username</td>
                <td>@item.CreatedDate</td>

                <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-danger">Đơn Hàng mới</span>
                    }
                    else
                    {
                        <span class="text text-success">Đơn hàng đã thành công</span>
                    }
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="ViewOrder" asp-controller="Order" asp-route-ordercode="@item.OrderCode">Xem</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Order" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>