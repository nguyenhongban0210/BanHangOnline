<div class="row">
	<div class="col-sm-3">
		@Html.Partial("_SlidebarPartial")
	</div>

	<div class="col-sm-9 padding-right">
		<div class="product-details">
			<div class="col-sm-5">
				<div class="view-product">
					<img src="~/media/products/@Model.Image" alt="" />
				</div>
				<div id="similar-product" class="carousel slide" data-ride="carousel">
				</div>

			</div>
			<div class="col-sm-7">
				<div class="product-information">
					<h2>@Model.Name</h2>
					<span>
						<span>@Model.Price VNĐ</span>
					</span>
					<p><b>Tình trạng:</b> New</p>
					<p><b>Thương hiệu:</b> @Model.Brand.Name</p>
					<p><b>Loại sản phẩm:</b> @Model.Categories.Name</p>
					<p><b>Số lượng còn:</b> @Model.Quantity</p>
					@* <label>Quantity:</label>
					<input type="text" value="@Model.Quantity" /> *@
					<a href=""><img src="images/product-details/share.png" class="share img-responsive" alt="" /></a>
					<a class="btn btn-default add-to-cart" asp-action="Add" asp-controller="Cart" asp-route-Id="@Model.Id">ADD TO CART</a>
				</div>
			</div>
		</div>

		<div class="category-tab shop-details-tab">
			<div class="col-sm-12">
				<ul class="nav nav-tabs">
					<li class="active"><a data-toggle="tab">Details</a></li>
				</ul>
			</div>
		</div>
		<div>
			<p>@Html.Raw(@Model.Description)</p>
		</div>

	</div>
</div>